@model List<Product>

<h1>Product List</h1>

<table class="table">
    <tr>
        <th>Product Name</th>
        <th>Price</th>
        <th>Actions</th>
    </tr>
    @foreach (var product in Model)
    {
        <tr>
            <td>@product.Name</td>
            <td>@product.Price</td>
            <td>
                <a class="btn btn-secondary btn-sm" asp-action="Details" asp-route-id="@product.Id">Details</a> |
                <a class="btn btn-secondary btn-sm" asp-action="Edit" asp-route-id="@product.Id">Edit</a> |
                <a class="btn btn-secondary btn-sm" asp-action="Delete" asp-route-id="@product.Id">Delete</a>
            </td>
        </tr>
    }
</table>

<a class="btn btn-primary" asp-action="Create">Create a Product</a>

