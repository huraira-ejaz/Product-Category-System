@model List<Product>

<h1>Products in Category</h1>

<table class="table">
    <tr>
        <th>Product Name</th>
        <th>Price</th>
        
    </tr>
    @foreach (var product in Model)
    {
        <tr>
            <td>@product.Name</td>
            <td>@product.Price</td>
            
        </tr>
    }
</table>

<a class="btn btn-primary" asp-action="Index">Back to Categories</a>

